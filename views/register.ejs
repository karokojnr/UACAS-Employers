<div class="row mt-5">
  <div class="col-md-6 m-auto">
    <h2 class="text-center mb-3">UACAS</h2>
    <div class="card card-body border-success">
      <h2 class="text-center mb-3"><img src="/images/logo.png" alt="" width="100" height="100"></h2>
      <h2 class="text-center mb-3">Register:</h2>
      <hr>
      <%- include ("./partials/messages") %>
      <form action="/users/register" method="POST">
        <div class="form-group">
          <label for="name">
            <h5>Company Name</h5>
          </label>
          <input type="name" id="name" name="name" class="form-control" placeholder="Enter company name..."
            value="<%= typeof name != 'undefined' ? name : '' %>" />
        </div>
        <div class="form-group">
          <label for="email">
            <h5>Email</h5>
          </label>
          <input type="email" id="email" name="email" class="form-control" placeholder="Enter Email"
            value="<%= typeof email != 'undefined' ? email : '' %>" />
        </div>
        <div class="form-group">
          <label for="password">
            <h5>Password</h5>
          </label>
          <input type="password" id="password" name="password" class="form-control" placeholder="Create Password"
            value="<%= typeof password != 'undefined' ? password : '' %>" />
        </div>
        <div class="form-group">
          <label for="password2">
            <h5>Confirm Password</h5>
          </label>
          <input type="password" id="password2" name="password2" class="form-control" placeholder="Confirm Password"
            value="<%= typeof password2 != 'undefined' ? password2 : '' %>" />
        </div>
        <button type="submit" class="btn btn-success btn-block">
          Register
        </button>
      </form>
      <p class="lead mt-4">
      <h6>NB: You will be able to login once your account has been approved!</h6>
      </p>

      <p class="lead mt-4"><h6>Have An Account? <a href="/users/login">Login</h6></a></p>
    </div>
  </div>
</div>